@page
@model GetSetCalculatorModel

<form method="post"> <input type="hidden" asp-for="Step" />

@if (Model.Step == 1)
{
    <h3>Основные параметры инвестиции</h3>
    <div>
        <label>Стоимость объекта:</label>
            <input asp-for="PurchasePrice" type="number" step="0.01" />
            <span asp-validation-for="PurchasePrice" class="text-danger"></span>
    </div>
    <div>
        <label>Первоначальный взнос:</label>
            <input asp-for="________" type="number" step="0.01" />
            <span asp-validation-for="________" class="text-danger"></span>
    </div>
    <div>
        <label>Процентная ставка (%):</label>
        <input asp-for="InterestRate" type="number" step="0.01" />
        <span asp-validation-for="InterestRate" class="text-danger"></span>
    </div>
    <div>
        <label>Срок кредита (лет):</label>
            <input asp-for="TermYears" type="number" />
            <span asp-validation-for="TermYears" class="text-danger"></span>
    </div>
    <div>
        <label>Ежемесячный платеж:</label>
        <input asp-for="MonthlyPayment" type="number" step="0.01" />
        <span asp-validation-for="MonthlyPayment" class="text-danger"></span>
    </div>
}

@page
@model InvestmentCalc.Pages.Log_InModel
@{
    Layout = null; // Убедитесь, что вы используете этот Layout, если не хотите наследовать от основного макета
    <link rel =
    " stylesheet
    "
    href
    =
    "
        ~/css/Log_In.css
    "
    asp-append-version = " true " />

}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Авторизация</title>
  
</head>
<body>
    <div class="container">
        <h1>Авторизация</h1>
        <form id="login-form" method="post" asp-page-handler="Login">
            <input type="text" id="username" name="username" placeholder="Имя пользователя" required>
            <input type="password" id="password" name="password" placeholder="Пароль" required>
            <button type="submit">Войти</button>
        </form>
        <button class="back-button" onclick="window.history.back()">Назад</button> <!-- Кнопка "Назад" -->
    </div>
</body>
</html>
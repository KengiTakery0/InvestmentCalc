@page
@model InvestmentCalc.Pages.AutorizationModel
@{
    ViewData["Title"] = "Authorization";
}

<style>
    body {
        margin: 0; /* Убираем отступы */
        height: 100vh; /* Высота на весь экран */
        background-image: url('https://get.wallhere.com/photo/selective-coloring-black-background-dark-background-simple-background-anime-girls-eyepatches-2140855.jpg'); /* Укажите URL вашего фона */
        background-size: cover; /* Заполнение фона */
        background-position: center; /* Центрирование фона */
        color: #ffffff; /* Белый текст */
        font-family: 'Helvetica Neue', sans-serif;
        display: flex; /* Используем flexbox для центрирования */
        justify-content: center; /* Центрирование по горизонтали */
        align-items: center; /* Центрирование по вертикали */
    }

    .container {
        max-width: 450px;
        margin: auto;
        padding: 25px;
        background-color: rgba(30, 30, 30, 0.8); /* Полупрозрачный темный фон для контейнера */
        border-radius: 10px;
        box-shadow: 0 6px 30px rgba(0, 0, 0, 0.8); /* Глубокая тень */
    }

    h1, h2 {
        color: #ff5722; /* Яркий оранжевый цвет для заголовков */
        text-shadow: 1px 1px 6px rgba(0, 0, 0, 0.9); /* Тень для заголовков */
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-control {
        background-color: #2c2c2c; /* Темный фон для полей ввода */
        border: 1px solid #ff5722; /* Оранжевая рамка */
        color: #ffffff; /* Белый текст в полях ввода */
        transition: border-color 0.3s, background-color 0.3s; /* Плавный переход */
    }

    .form-control:focus {
        background-color: #3c3c3c; /* Более светлый фон при фокусе */
        border-color: #ff5722; /* Оранжевая рамка при фокусе */
        box-shadow: 0 0 6px rgba(255, 87, 34, 0.7); /* Оранжевый эффект тени */
    }

    .btn-primary {
        background-color: #ff5722; /* Оранжевый цвет кнопки */
        border: none;
        transition: background-color 0.3s; /* Плавный переход */
    }

    .btn-primary:hover {
        background-color: #e64a19; /* Более темный оранжевый при наведении */
    }

    .btn-success {
        background-color: #4caf50; /* Зеленый цвет кнопки регистрации */
        border: none;
        transition: background-color 0.3s; /* Плавный переход */
    }

    .btn-success:hover {
        background-color: #43a047; /* Более темный зеленый при наведении */
    }
</style>

<div class="container text-center">
    <h1 class="display-4">Logout or Authorization</h1>

    <h2>Login</h2>
    <form method="post" asp-page-handler="Login">
        <div class="form-group">
            <label for="loginUsername">Username</label>
            <input id="loginUsername" name="Username" class="form-control" required />
        </div>
        <div class="form-group">
            <label for="loginPassword">Password</label>
            <input id="loginPassword" name="Password" type="password" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-primary">Login</button>
    </form>

    <h2>Register</h2>
    <form method="post" asp-page-handler="Register">
        <div class="form-group">
            <label for="registerUsername">Username</label>
            <input id="registerUsername" name="RegisterModel.Username" class="form-control" required />
        </div>
        <div class="form-group">
            <label for="registerPassword">Password</label>
            <input id="registerPassword" name="RegisterModel.Password" type="password" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-success">Register</button>
    </form>
</div>